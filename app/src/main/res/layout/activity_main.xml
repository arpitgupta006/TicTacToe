<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tictactoewallpaper1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="354dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            app:srcCompat="@drawable/tictactoelogo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buSinglePlayer"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:fontFamily="@font/bangers"
            android:onClick="mainPage"
            android:text="Single Player"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buDoublePlayer"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:fontFamily="@font/bangers"
            android:onClick="mainPage"
            android:text="Double Player"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buExit"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:fontFamily="@font/bangers"
            android:onClick="quit"
            android:text="Exit"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>